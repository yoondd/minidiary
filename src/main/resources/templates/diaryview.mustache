{{>layouts/header}}



{{#diary}}
    <div class="diary-container">
        <div>
            <img src="/img/emoji_{{mood}}.png" class="mood-icon">
        </div>
        <div class="body-weather">{{weather}}</div>
        <h2 class="body-title {{mood}}">{{title}}</h2>
        <pre class="body-body">{{body}}</pre>

        <div class="btn-group">
            <a href="/diary/{{id}}/update" class="btn font-normal">
                <img src="/img/exchange.png" alt="일기장 수정">
            </a>
            <a href="/diary/{{id}}/delete_process" class="btn font-normal">
                <img src="/img/delete.png" alt="일기장 삭제">
            </a>
            <a href="/list" class="btn font-normal">
                <img src="/img/list.png" alt="일기장 목록">
            </a>
        </div>

    </div>
{{/diary}}

{{>layouts/footer}}