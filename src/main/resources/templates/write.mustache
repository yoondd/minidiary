{{>layouts/header}}

<h1 class="title center">하루를 기록하는 곳</h1>
<p class="subtitle center">{{username}}님의 하루는 어땠나요?</p>


<form action="/write_process" method="post" class="write-form">
    <div class="diary-mood">
        <input type="radio" value="HAPPY" id="mood_happy" name="mood" checked>
        <label for="mood_happy">
            <img src="/img/emoji_happy.png" alt="행복">
        </label>
        <input type="radio" value="SAD" id="mood_sad" name="mood">
        <label for="mood_sad">
            <img src="/img/emoji_sad.png" alt="슬픔">
        </label>
        <input type="radio" value="SURPRISE" id="mood_surprise" name="mood">
        <label for="mood_surprise">
            <img src="/img/emoji_surprise.png" alt="놀라움">
        </label>
        <input type="radio" value="ANGRY" id="mood_angry" name="mood">
        <label for="mood_angry">
            <img src="/img/emoji_angry.png" alt="분노">
        </label>
        <input type="radio" value="EXCITE" id="mood_excite" name="mood">
        <label for="mood_excite">
            <img src="/img/emoji_excite.png" alt="설렘">
        </label>
    </div>
    <input type="text" name="title" class="diary-title" placeholder="일기의 제목을 적어주세요">
    <input type="text" name="weather" class="diary-weather" placeholder="오늘 날씨를 한 줄로 표현한다면?">
    <textarea name="body" class="diary-body" placeholder="오늘 하루는 어떻게 보냈나요?"></textarea>

    <div class="btn-group">
        <button class="diary-submit btn font-normal">저장하기</button>
    </div>
</form>

{{>layouts/footer}}